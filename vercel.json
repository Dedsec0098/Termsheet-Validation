{
    "version": 2,
    "builds": [
      {
        "src": "backend/api.py",
        "use": "@vercel/python",
        "config": { "pythonVersion": "3.9" }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/$1"
      }
    ]
  }
